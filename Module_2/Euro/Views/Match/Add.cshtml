@model Match;

<div asp-validation-summary="All"></div>
<form method="post">
    <div>
        <div>
            <label asp-for="TeamId1">TeamId1</label>
            <select asp-for="TeamId1" asp-items="@ViewBag.Teams">

            </select>
        </div>

        <div>
            <label asp-for="TeamId2">TeamId2</label>
            <select asp-for="TeamId2" asp-items="@ViewBag.Teams">

            </select>
        </div>
        <div>
            <label asp-for="StartTime">StartTime</label>
            <input asp-for="StartTime" type="datetime-local"/>
        </div>

        <div>
            <label asp-for="EndTime">EndTime</label>
            <input asp-for="EndTime" type="datetime-local"/>
        </div>

        <div>
            <label asp-for="RoundId">Round</label>
            <select asp-for="RoundId" asp-items="@ViewBag.Rounds">

            </select>
        </div>
        <div>
            <label asp-for="Score1">Score 1</label>
            <input asp-for="Score1" type="number" min="0"/>
        </div>
        <div>
            <label asp-for="Score2">Score 2</label>
            <input asp-for="Score2" type="number" min="0"/>
        </div>
        <button class="btn btn-primary" type="submit">
            Save Changes
        </button>
    </div>
</form>
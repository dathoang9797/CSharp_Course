@model List<WebAppFruitable.Model.Role>

<button class="btn btn-primary mb-2" id="btn-add-role">Add</button>

@if (TempData["Msg"] != null)
{
    <div class="m-2 alert alert-dismissible fade show" role="alert">
        <strong>@TempData["Msg"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Command</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.RoleId</th>
            <td>@item.RoleName</td>
            <td>
                <form method="post" action="/dashboard/role/delete/@item.RoleId">
                    <button class="btn btn-outline-primary del">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="modal fade" id="addRoleModal" tabindex="-1" aria-labelledby="addRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form action="/dashboard/role/add" method="post" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addRoleModalLabel">
                    Add Role
                    <span id="name-delete">

                    </span>
                </h5>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label" for="RoleName">RoleName</label>
                    <input
                        class="form-control"
                        type="text"
                        id="RoleName"
                        name="RoleName"/>
                </div>
            </div>
            <div class="modal-footer">
                <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal">
                    Close
                </button>
                <button class="btn btn-primary">
                    Add
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script>
        $("#btn-add-role").click(function (){
            $("#addRoleModal").modal("show");
        });
    </script>
}
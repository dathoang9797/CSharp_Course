@model WebAppFruitable.Model.ResetForgotPassword;

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card my-5">
                <form
                    method="post"
                    action="/auth/resetforgotpassword"
                    class="card-body cardbody-color p-lg-5">
                    <h2 class="text-center text-dark mt-5">ForgotPassword</h2>
                    @if (TempData["Msg"] != null)
                    {
                    <div class="alert alert-success text-center">
                        @TempData["Msg"]
                    </div>
                    }
                    <input hidden asp-for="Token" value="@Model.Token"/>
                    <div class="mb-3">
                        <input
                            type="text"
                            class="form-control"
                            asp-for="NewPassword"
                            placeholder="Passwrod">
                    </div>
                    <div class="mb-3">
                        <input
                            type="text"
                            class="form-control"
                            asp-for="ConfirmPassword"
                            placeholder="ConfirmPassword">
                    </div>
                    <div class="text-center">
                        <button
                            type="submit"
                            class="btn btn-color px-5 mb-5 w-100">
                            Reset Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
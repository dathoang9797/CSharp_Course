@model WebAppFruitable.Model.MemberBody;

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card my-5">
                <form
                    method="post"
                    action="/auth/resetpassword"
                    class="card-body cardbody-color p-lg-5">
                    <h2 class="text-center text-dark mt-5">ResetPassword</h2>
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewData["ErrorMessage"]
                        </div>
                    }

                    @if (TempData["Msg"] != null)
                    {
                    <div class="alert alert-success text-center">
                        @TempData["Msg"]
                    </div>
                    }
                    <div class="mb-3">
                        <input
                            type="text"
                            class="form-control"
                            asp-for="Email"
                            placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <input
                            type="text"
                            class="form-control"
                            asp-for="Password"
                            placeholder="password">
                    </div>
                    <div class="text-center">
                        <button
                            type="submit"
                            class="btn btn-color px-5 mb-5 w-100">
                            Reset Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
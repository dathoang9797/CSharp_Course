@model WebAppFruitable.Model.Member;

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card my-5">
                <form
                    method="post"
                    action="/auth/forgotpassword"
                    class="card-body cardbody-color p-lg-5">
                    <h2 class="text-center text-dark mt-5">ForgotPassword</h2>
                    @if (ViewData.ModelState["Email"]?.Errors.Count > 0)
                    {
                        <span class="text-danger">
                            @ViewData.ModelState["Email"]?.Errors[0].ErrorMessage
                        </span>
                    }
                    <div class="mb-3">
                        <input
                            type="text"
                            class="form-control"
                            asp-for="Email"
                            placeholder="Email">
                    </div>
                    <div class="text-center">
                        <button
                            type="submit"
                            class="btn btn-color px-5 mb-5 w-100">
                             Forgot Passowrd
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebAppFruitable.Model.Member;

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-dark mt-5">Login</h2>
            <div class="card my-5">
                <form method="post" class="card-body cardbody-color p-lg-5">
                    <div class="text-center">
                        <img
                            src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                            width="200px" alt="profile">
                    </div>
                    <div class="mb-3">
                        <input
                            type="text"
                            class="form-control"
                            asp-for="Email"
                            placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <input
                            type="text"
                            class="form-control"
                            asp-for="Password"
                            placeholder="password">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-color px-5 mb-5 w-100">Login</button>
                    </div>
                    <div class="text-center">
                        <a asp-controller="Auth" asp-action="Register">Login</a>
                    </div>
                    <div class="text-center">
                        <a asp-controller="Auth" asp-action="GoogleSignIn">
                            <i class="fab fa-google"></i>
                            Login With Google
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
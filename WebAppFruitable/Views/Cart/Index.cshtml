@model List<WebAppFruitable.Model.Cart>

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Cart</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item">
            <a href="#">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="#">Pages</a>
        </li>
        <li class="breadcrumb-item active text-white">Cart</li>
    </ol>
</div>
<!-- Single Page Header End -->


<!-- Cart Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Products</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total</th>
                    <th scope="col">Handle</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr product-id="@item.ProductId" cart-code="@item.CartCode">
                        <th scope="row">
                            <div class="d-flex align-items-center">
                                <img src="/img/@item.Product?.ImageUrl" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                            </div>
                        </th>
                        <td>
                            <p class="mb-0 mt-4">@item.Product?.ProductName</p>
                        </td>
                        <td>
                            <p class="mb-0 mt-4">@item.Product?.Price.ToString("#,0.00") đ</p>
                        </td>
                        <td>
                            <div class="input-group quantity mt-4" style="width: 100px;">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-minus rounded-circle bg-light border">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <input
                                    type="hidden"
                                    value="@item.Product?.ProductId"
                                    name="productId"/>
                                <input
                                    name="quantity"
                                    type="text"
                                    class="form-control form-control-sm text-center border-0"
                                    value="@item.Quantity">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-plus rounded-circle bg-light border">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="mb-0 mt-4">
                                @(item.Product != null ? (item.Quantity * item.Product.Price).ToString("#,0.00") : 0.ToString("#,0.00"))
                                <span class="ml-2">đ</span>
                            </p>
                        </td>
                        <td>
                            <button class="delete btn btn-md rounded-circle bg-light border mt-4">
                                <i class="fa fa-times text-danger"></i>
                            </button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
                        <p class="mb-0 pe-4">
                            @(Model.Sum(item => item.Product != null ? item.Quantity * item.Product.Price : 0).ToString("#,0.00")) <span class="ml-2">đ</span>
                        </p>
                    </div>
                    <button class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button">Proceed Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart Page End -->
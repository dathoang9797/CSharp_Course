@model List<WebAppFruitable.Model.Invoice>?

<div class="container-fluid py-5 mt-5">
    <table class="table table-dark table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Total</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Address</th>
            <th>City</th>
            <th>Mobile</th>
            <th>PaymentMethod</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.InvoiceId</td>
                    <td>@item.InvoiceDate.ToString("dd/MM/yyyy hh:mm:ss")</td>
                    <td>@item.Amount.ToString("#.00")</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Address</td>
                    <td>@item.City</td>
                    <td>@item.Mobile</td>
                    <td>@item.PaymentMethod</td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
@model WebKoi.Model.Register;

<div asp-validation-summary="All"></div>
<form method="post">
    <div class="row mt-1">
        <label class="col-2 form-label" asp-for="Email">Email</label>
        <div class="col-6">
            <input class="form-control" type="text" asp-for="Email"/>
        </div>
    </div>

    <div class="row mt-1">
        <label class="col-2 form-label" asp-for="Password">Password</label>
        <div class="col-6">
            <input class="form-control" type="password" asp-for="Password"/>
        </div>
    </div>

    <div class="row mt-1">
        <label class="col-2 form-label" asp-for="Name">Name</label>
        <div class="col-6">
            <input class="form-control" type="text" asp-for="Name"/>
        </div>
    </div>
    <div class="row mt-1">
        <label class="col-2 form-label" asp-for="GiventName">GiventName</label>
        <div class="col-6">
            <input class="form-control" type="text" asp-for="GiventName"/>
        </div>
    </div>
    <div class="row mt-1">
        <label class="col-2 form-label" asp-for="Surname">Surname</label>
        <div class="col-6">
            <input class="form-control" type="text" asp-for="Surname"/>
        </div>
    </div>

    <div class="mt-1">
        <button class="btn btn-primary">Save Changes</button>
    </div>
</form>
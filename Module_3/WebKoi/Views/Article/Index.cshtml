@model IEnumerable<WebKoi.Model.Article>

<a href="/article/add">Add</a>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Description</th>
        <th>Content</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ArticleName</td>
            <td>
                <img width="100" height="80" src="/img/@item.ImageUrl"/>
            </td>
            <td>@item.Description</td>
            <td>@item.Content</td>
            <td>
                <a href="/article/detail/@item.ArticleId">Detail</a>
                <a href="/article/delete/@item.ArticleId">Delete</a>
                <a href="/article/edit/@item.ArticleId">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>
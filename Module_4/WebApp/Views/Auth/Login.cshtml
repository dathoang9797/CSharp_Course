@model WebApi.Model.LoginModel;

<div asp-validation-summary="All"></div>
<form method="post">
    <div>
        <label asp-for="Email">
            Email
        </label>
        <div>
            <input type="text" asp-for="Email" required=""/>
        </div>
    </div>
    <div>
        <label asp-for="Password">
            Password
        </label>
        <div>
            <input type="text" asp-for="Password" required=""/>
        </div>
    </div>

    <div>
        <button>Login</button>
    </div>
</form>
@model ProductPage;
@inject IConfiguration config;

<a href="/product/add">Add</a>

<ul class="pagination">
    @for (var i = 1; i <= Model.Pages; i++)
    {
        <li class="page-item">
            <a class="page-link" href="/product/index/@i" >@i</a>
        </li>
    }
</ul>
<table>
    <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@item.CategoryId</td>
                    <td>
                        <img src="@config["UrlService"]/images/@item.ImageUrl" alt="@item.ProductName" width="80"/>
                    </td>
                    <td>
                        <a href="/product/delete/@item.ProductId">
                            Delete
                        </a>

                        <a href="/product/edit/@item.ProductId">
                            Edit
                        </a>
                    </td>
                </tr>
            }
    </tbody>
</table>
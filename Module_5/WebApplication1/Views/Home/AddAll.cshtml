@model List<Department>

<table>
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <input type="checkbox" name="ids" value="@item.Id"/>
            </td>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
        </tr>
    }
    <tfoot>
    </tfoot>
</table>